<%= javascript_include_tag "prototype" %>
<% form_tag producer_path(@producer, :with => "this.form.serialize();"), :method => :get do %>
  <%= select_tag :category_id, options_for_select([["Wszystkie",nil]]+@producer.categories.map{|c| [c.name, c.id]},params[:category].to_i), {:onchange => "this.form.submit();"} %>
<% end %>
<table class="list">
  <% for product in products %>
  <tr>
    <td><%= link_to product.name, product_path(product) %></td>
    <td><%= image_tag product.image.url(:thumb) if product.image %></td>
    <td><%= link_to "Zapytaj o cenÄ™", contact_form_path(:product => product.name) %></td>
  </tr>
  <% end %>
</table>
