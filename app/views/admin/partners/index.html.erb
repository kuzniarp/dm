<h1>Partnerzy</h1>
<%= link_to "Dodaj partnera", new_admin_partner_path %>
<table id="list">
  <tr>
    <th>Nazwa</th>
    <th>Logo</th>
    <th colspan="2">&nbsp</th>
  </tr>
  <tbody>
  <% for item in @items %>
  <tr class="<%= cycle("odd","even") %>">
    <td><%= link_to item.name, edit_admin_partner_path(item) %></td>
    <td><%= image_tag item.image.url(:thumb) if item.image %></td>
    <td><%= link_to "Edytuj", edit_admin_partner_path(item) %></td>
    <td><%= link_to "Usuń", admin_partner_path(item), :method => :delete, :confirm => "Na pewno chcesz usunąć?" %></td>
  </tr>
  <% end %>
  </tbody>
</table>
