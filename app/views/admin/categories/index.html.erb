<h1>Kategorie</h1>
<%= link_to "Dodaj kategorię", new_admin_category_path %>
<table id="list">
  <tr>
    <th>Nazwa</th>
    <th colspan="2">&nbsp</th>
  </tr>
  <tbody>
  <% for item in @items %>
  <tr class="<%= cycle("odd","even") %>">
    <td><%= link_to item.name, edit_admin_category_path(item) %></td>
    <td><%= link_to "Edytuj", edit_admin_category_path(item) %></td>
    <td><%= link_to "Usuń", admin_category_path(item), :method => :delete, :confirm => "Na pewno chcesz usunąć?" %></td>
  </tr>
  <% end %>
  </tbody>
</table>