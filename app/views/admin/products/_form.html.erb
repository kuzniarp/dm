<fieldset><legend>Produkt</legend>  
  <%= f.label :name, "Nazwa" %><br />
  <%= f.text_field :name %><br />
  <%= f.label :description, "Opis" %><br />
  <% @product = @item %>
  <%= ckeditor_textarea(:product, :description, :width => '100%', :height => '250px', :language => 'pl') %><br />
  <%= f.label :producer_id, "Producent" %><br />
  <%= f.select :producer_id, Producer.all.map{|p| [p.name, p.id]} %><br />
  <%= f.label :category_id, "Kategoria" %><br />
  <%= f.select :category_id, Category.all.map{|p| [p.name, p.id]} %><br />
  <%= f.label :new, "Nowosc" %><br />
  <%= f.check_box :new %><br />
  <%= f.label :image, "ZdjÄ™cie"  %><br />
  <%= image_tag @item.image.url(:thumb) if @item.image %>
  <%= f.file_field :image %><br />
  <%= f.submit "Zapisz" %>
</fieldset>

